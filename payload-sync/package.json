{
  "name": "@dexilion/payload-sync",
  "version": "3.74.0-alpha.0",
  "type": "module",
  "license": "MIT",
  "description": "A plugin to sync content between two Payload CMS instances.",
  "author": "Dexilion",
  "bin": {
    "payload-sync": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./cli": {
      "types": "./src/cli.ts",
      "import": "./src/cli.ts",
      "default": "./src/cli.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "optionalDependencies": {
    "commander": "^14.0",
    "dotenv": "^17.3.1"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "next": "^16",
    "payload": "3",
    "@payloadcms/ui": "3"
  },
  "devDependencies": {
    "@payloadcms/db-mongodb": "3.74.0",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/react": "19.2.2",
    "@types/pg": "^8.6.6",
    "commander": "^14.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "mongodb-memory-server": "^10.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "build": "pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf -g {dist,*.tsbuildinfo}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "!**/*.tsbuildinfo"
  ],
  "publishConfig": {
    "bin": {
      "payload-sync": "./dist/cli.js"
    },
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./cli": {
        "import": "./dist/cli.js",
        "types": "./dist/cli.d.ts",
        "default": "./dist/cli.js"
      }
    },
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts"
  }
}
