{
  "name": "@dexilion/payload-pms",
  "version": "3.74.0",
  "description": "A payload page management system plugin.",
  "author": "Dexilion",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./RichText": {
      "types": "./src/components/RichText/index.tsx",
      "import": "./src/components/RichText/index.tsx",
      "default": "./src/components/RichText/index.tsx"
    },
    "./admin/LayoutVariantSelect": {
      "types": "./src/components/admin/LayoutVariantSelect.tsx",
      "import": "./src/components/admin/LayoutVariantSelect.tsx",
      "default": "./src/components/admin/LayoutVariantSelect.tsx"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "next": "^16",
    "payload": "3",
    "sharp": "^0.34.5",
    "@payloadcms/ui": "3",
    "@payloadcms/richtext-lexical": "3",
    "@dexilion/payload-utils": "3.74.0"
  },
  "devDependencies": {
    "@payloadcms/db-mongodb": "3.74.0",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/react": "19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "mongodb-memory-server": "^10.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "build": "pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf -g {dist,*.tsbuildinfo}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "!**/*.tsbuildinfo"
  ],
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./RichText": {
        "types": "./dist/components/RichText/index.d.ts",
        "import": "./dist/components/RichText/index.js",
        "default": "./dist/components/RichText/index.js"
      },
      "./admin/LayoutVariantSelect": {
        "types": "./dist/components/admin/LayoutVariantSelect.d.ts",
        "import": "./dist/components/admin/LayoutVariantSelect.js",
        "default": "./dist/components/admin/LayoutVariantSelect.js"
      }
    },
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts"
  }
}
